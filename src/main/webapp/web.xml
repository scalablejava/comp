<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
 PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>



    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.scalablejava.comp.weblayer.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/login/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>com.scalablejava.comp.weblayer.filters.RegisterFilter</filter-class>
    </filter>
        <filter-mapping>
        <filter-name>RegisterFilter</filter-name>
        <url-pattern>/register/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>HomeFilter</filter-name>
        <filter-class>com.scalablejava.comp.weblayer.filters.HomeFilter</filter-class>
    </filter>
        <filter-mapping>
        <filter-name>HomeFilter</filter-name>
        <url-pattern>/home/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CompetitionFilter</filter-name>
        <filter-class>com.scalablejava.comp.weblayer.filters.CompetitionFilter</filter-class>
    </filter>
        <filter-mapping>
        <filter-name>CompetitionFilter</filter-name>
        <url-pattern>/competition/*</url-pattern>
    </filter-mapping>

</web-app>